
{% set token = generate_token() %}

<div class="mb-3 row">
    <label for="" class="col-sm-2 col-form-label">{{ config.label|default('') }}</label>
    <div class="col-sm-10 d-flex">
        <div class="col-sm-1 image_{{ token }}" {% if image|default(null) is null %} style="display: none"{% endif %}>
              <span>
                  {% if image|default(null) %}
                      <img src="{{ asset('upload/'~image.safeName~'.'~image.extension) }}" class="image_img_{{ token }} " style="width: 50px">
                      <input type="hidden" class="input_image_file_{{ token }}" name="image" value="{{ image.id|default('') }}">
                  {% else %}
                      <img src="" class="image_img_{{ token }}" style="width: 50px; display: none">
                      <input type="hidden" class="input_image_file_{{ token }}" name="image" value="">
                  {% endif %}
             </span>
        </div>

        <div class="col-sm-2">
            <button type="button" class="btn btn-secondary" style="position: relative">Wgraj plik
                <input type="file" name="" class="file_input" data-image="{{ token }}" style="
            opacity: 0;
            position: absolute;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            ">
            </button>
        </div>
    </div>
</div>