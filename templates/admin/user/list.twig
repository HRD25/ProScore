{% extends '/admin/layout/layout.twig' %}

{% block cardHeader %}
    {% include 'admin/elements/breadCrumb/breadCrumb.twig' with {
        breadCrumbs: breadCrumbs|default([])
    } %}
{% endblock %}

{% block content %}
    <div class="container-fluid m-0 p-0">
        <a href="{{ path('admin_user_create') }}" type="button" class="btn btn-dark" data-toggle="tooltip" data-placement="bottom" title="Dodaj użytkownika">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z"/>
            </svg>
        </a>
    </div>

    <div class="row mt-2">
        <table id="myTable" class="table table-striped table-hover table-bordered">
            <thead class="table-dark">
            <tr>
                <th>Imię i Nazwisko</th>
                <th>Wiek</th>
                <th>Akcje</th>
            </tr>
            </thead>

            <tbody>
            <tr>
                <td>Tom Kowalski</td>
                <td>18 lat</td>
                <td>
                    <button class="btn btn-primary" data-toggle="tooltip" data-placement="bottom" title="Edytuj"><i class="fa-solid fa-pen"></i></button>
                    <button class="btn btn-danger" data-toggle="tooltip" data-placement="bottom" title="Usuń"><i class="fa-solid fa-trash"></i></button>
                </td>
            </tr>
            <tr>
                <td>Ania Nowak</td>
                <td>21 lat</td>
                <td>
                    <button class="btn btn-primary" data-toggle="tooltip" data-placement="bottom" title="Edytuj"><i class="fa-solid fa-pen"></i></button>
                    <button class="btn btn-danger" data-toggle="tooltip" data-placement="bottom" title="Usuń"><i class="fa-solid fa-trash"></i></button>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}

{% block cardFooter %}
    {% include 'admin/elements/breadCrumb/breadCrumb.twig' with {
        breadCrumbs: breadCrumbs|default([])
    } %}
{% endblock %}

 {% block javascripts %}
     {{ parent() }}
     <script>
         $(document).ready( function () {
             $('#myTable').DataTable();
             $('[data-toggle="tooltip"]').tooltip()
         } );
     </script>
 {% endblock %}